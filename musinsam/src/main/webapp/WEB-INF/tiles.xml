<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>
	 
	 <!-- 메인 페이지 -->
	<definition name="main_page" template="/WEB-INF/layouts/mainPage/mainTemplate.jsp">
		<put-attribute name="header" value="/WEB-INF/layouts/mainPage/header.jsp"></put-attribute>
		<put-attribute name="body_today" value="/WEB-INF/layouts/mainPage/today.jsp"></put-attribute>
		<put-attribute name="body_best" value="/WEB-INF/layouts/mainPage/best.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/layouts/mainPage/footer.jsp"></put-attribute>
	</definition>
	<definition name="WILDCARD:main/*" extends="main_page">
		<put-attribute name="body_best" value="/WEB-INF/view/main/{1}.jsp"></put-attribute>
	</definition>
	
	<definition name="other_page" template="/WEB-INF/layouts/otherPage/otherTemplate.jsp">
		<put-attribute name="header" value="/WEB-INF/layouts/mainPage/header.jsp"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/layouts/otherPage/otherBody.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/layouts/mainPage/footer.jsp"></put-attribute>
	</definition>	
	<definition name="WILDCARD:*/*" extends="other_page">
		<put-attribute name="body" value="/WEB-INF/view/{1}/{2}.jsp"></put-attribute>
	</definition>

  
</tiles-definitions>

