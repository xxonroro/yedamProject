<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	<settings>
		<setting name = "mapUnderscoreToCamelCase" value ="True"></setting>
		<setting name = "jdbcTypeForNull" value="NULL"/>
	</settings>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@192.168.0.14:1521:xe"/>
        <property name="username" value="c##proj"/>
        <property name="password" value="oracle"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="co/yedam/mapper/BoardMapper.xml"/>  <!-- 수정해야됨 -->
    <mapper resource="co/yedam/mapper/MemberMapper.xml"/>
    <mapper resource="co/yedam/mapper/ReplyMapper.xml"/>
  </mappers>
</configuration>